<Window x:Class="IsoCreatorWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ISO Creator" Height="768" Width="1024" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- rigo 2 -->
            <RowDefinition Height="Auto"/>
            <!-- rigo 3 -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cartella destinazione + Sorgente -->
        <Grid Grid.Row="1" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtDestFolder" IsReadOnly="True" Width="204" Height="22"
                     Grid.Column="0" VerticalAlignment="Center"/>
            <Button x:Name="btnSelectDest" Content="Destinazione" Width="95" Height="30"
                    Grid.Column="1" Margin="5,0,0,0" Click="btnSelectDest_Click"/>

            <Label Content="Sorgente:" Width="80" VerticalAlignment="Center" Margin="20,0,5,0"
                   Grid.Column="2"/>
            <TextBox x:Name="txtSourceFolder" IsReadOnly="True" Height="22"
                     Grid.Column="3" VerticalAlignment="Center"/>
        </Grid>

        <!-- Nome file ISO + Total Size + ProgressBarSize + Folder Size + ProgressBar -->
        <Grid Grid.Row="2" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Label Nome ISO -->
                <ColumnDefinition Width="Auto"/>
                <!-- TextBox Nome ISO -->
                <ColumnDefinition Width="Auto"/>
                <!-- Label Total Size -->
                <ColumnDefinition Width="Auto"/>
                <!-- TextBox Total Size -->
                <ColumnDefinition Width="*"/>
                <!-- ProgressBarSize dimezzata -->
                <ColumnDefinition Width="Auto"/>
                <!-- Label Folder Size -->
                <ColumnDefinition Width="Auto"/>
                <!-- TextBox Folder Size -->
                <ColumnDefinition Width="*"/>
                <!-- ProgressBar Folder -->
            </Grid.ColumnDefinitions>

            <Label Content="Nome ISO:" Width="80" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtIsoName" Width="224" Height="22" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <Label Content="Total Size:" Width="80" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox x:Name="txtTotalSize" Text="0Kb" Width="80" Height="22"
                     IsReadOnly="True" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,5,0"/>

            <!-- ProgressBar con testo sovrapposto (ISO) dimezzata -->
            <Grid Grid.Column="4" Height="20" VerticalAlignment="Center">
                <ProgressBar x:Name="progressBarSize"
                             Minimum="0" Maximum="100"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"/>
                <TextBlock x:Name="progressBarSizeText"
                           Text="0%"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="Black"
                           FontWeight="Bold"/>
            </Grid>

            <!-- Folder Size + ProgressBar spostati qui -->
            <Label Content="Folder Size:" Width="80" Grid.Column="5" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <TextBox x:Name="txtFolderSize" Text="0Kb" Width="80" Height="22"
                     IsReadOnly="True" VerticalAlignment="Center" Grid.Column="6" Margin="0,0,5,0"/>

            <Grid Grid.Column="7" Height="20" VerticalAlignment="Center">
                <ProgressBar x:Name="progressBar"
                             Minimum="0" Maximum="100"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"/>
                <TextBlock x:Name="progressBarText"
                           Text="0%"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="Black"
                           FontWeight="Bold"/>
            </Grid>
        </Grid>

        <!-- Bottoni su rigo 3 -->
        <Grid Grid.Row="3" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnSelectSource" Content="Sorgente" Width="95" Height="30"
                    Grid.Column="0" HorizontalAlignment="Left" Click="btnSelectSource_Click"/>
            <Button x:Name="btnCreateIso" Content="Crea ISO" Width="95" Height="30"
                    Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Click="btnCreateIso_Click"/>
            <Button x:Name="btnOpenIso" Content="Apri ISO" Width="95" Height="30"
                    Grid.Column="2" HorizontalAlignment="Left" Margin="10,0,0,0" Click="btnOpenIso_Click"/>
        </Grid>

        <!-- Area divisa in due colonne -->
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TreeView x:Name="isoTreeView" Grid.Column="0" SelectedItemChanged="isoTreeView_SelectedItemChanged"/>

            <ListView x:Name="detailsListView" Grid.Column="1" Margin="10,0,0,0"
                      MouseDoubleClick="detailsListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nome" Width="250">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="16" Height="16" Margin="0,0,5,0"
                                               Source="{Binding Icon}" />
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Tipo" DisplayMemberBinding="{Binding Type}" Width="100"/>
                        <GridViewColumn Header="Dimensione" DisplayMemberBinding="{Binding Size}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
