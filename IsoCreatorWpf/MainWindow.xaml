<Window x:Class="IsoCreatorWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ISO Creator" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Destinazione + Sorgente -->
            <RowDefinition Height="Auto"/>
            <!-- Nome ISO + ProgressBar -->
            <RowDefinition Height="Auto"/>
            <!-- Bottoni -->
            <RowDefinition Height="Auto"/>
            <!-- TreeView + pannello -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cartella destinazione + Sorgente -->
        <Grid Grid.Row="1" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- TextBox Destinazione -->
                <ColumnDefinition Width="Auto"/>
                <!-- Bottone Destinazione -->
                <ColumnDefinition Width="Auto"/>
                <!-- Label Sorgente -->
                <ColumnDefinition Width="*"/>
                <!-- TextBox Sorgente -->
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtDestFolder" IsReadOnly="True" Width="204" Height="22"
                     Grid.Column="0" VerticalAlignment="Center"/>
            <Button x:Name="btnSelectDest" Content="Destinazione" Width="95" Height="30"
                    Grid.Column="1" Margin="5,0,0,0" Click="btnSelectDest_Click"/>

            <Label Content="Sorgente:" Width="80" VerticalAlignment="Center" Margin="20,0,5,0"
                   Grid.Column="2"/>
            <TextBox x:Name="txtSourceFolder" IsReadOnly="True" Height="22"
                     Grid.Column="3" VerticalAlignment="Center"/>
        </Grid>

        <!-- Nome file ISO + Total Size + ProgressBar -->
        <!-- Nome file ISO + Total Size + ProgressBar -->
        <!-- Nome file ISO + Total Size + ProgressBar -->
        <Grid Grid.Row="2" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Label Nome ISO -->
                <ColumnDefinition Width="Auto"/>
                <!-- TextBox Nome ISO -->
                <ColumnDefinition Width="Auto"/>
                <!-- Label Total Size -->
                <ColumnDefinition Width="Auto"/>
                <!-- TextBox Total Size -->
                <ColumnDefinition Width="Auto"/>
                <!-- ProgressBar -->
            </Grid.ColumnDefinitions>

            <Label Content="Nome ISO:" Width="80" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtIsoName" Width="224" Height="22" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <!-- Label Total Size -->
            <Label Content="Total Size:" Width="80" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,5,0"/>

            <!-- TextBox Total Size -->
            <TextBox x:Name="txtTotalSize" Text="0Kb" Width="80" Height="22"
             IsReadOnly="True" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,5,0"/>

            <!-- ProgressBar subito accanto alla TextBox -->
            <ProgressBar x:Name="progressBar" Grid.Column="4" Width="270" Height="15"
                 Minimum="0" Maximum="100" VerticalAlignment="Center"/>
        </Grid>



        <!-- Bottoni -->
        <!-- Bottoni -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,5,0,5">
            <Button x:Name="btnSelectSource" Content="Sorgente" Width="95" Height="30"
            HorizontalAlignment="Left" Click="btnSelectSource_Click"/>
            <Button x:Name="btnCreateIso" Content="Crea ISO" Width="95" Height="30"
            HorizontalAlignment="Left" Margin="10,0,0,0" Click="btnCreateIso_Click"/>
            <Button x:Name="btnOpenIso" Content="Apri ISO" Width="95" Height="30"
            HorizontalAlignment="Left" Margin="10,0,0,0" Click="btnOpenIso_Click"/>

            <!-- 🔑 Nuova Label e TextBox per Folder Size -->
            <Label Content="Folder Size:" Width="80" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <TextBox x:Name="txtFolderSize" Text="0Kb" Width="80" Height="22"
             IsReadOnly="True" VerticalAlignment="Center"/>
        </StackPanel>


        <!-- Area divisa in due colonne -->
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- TreeView a sinistra -->
            <TreeView x:Name="isoTreeView" Grid.Column="0" SelectedItemChanged="isoTreeView_SelectedItemChanged"/>

            <!-- ListView a destra -->
            <ListView x:Name="detailsListView" Grid.Column="1" Margin="10,0,0,0"
                      MouseDoubleClick="detailsListView_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nome" Width="250">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="16" Height="16" Margin="0,0,5,0"
                                               Source="{Binding Icon}" />
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Tipo" DisplayMemberBinding="{Binding Type}" Width="100"/>
                        <GridViewColumn Header="Dimensione" DisplayMemberBinding="{Binding Size}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
